<resources>




    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/TabStyle</item>
    </style>



    <style name="TabStyle" parent="Widget.TabPageIndicator">
        <item name="android:textColor">#FF777777</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/tab_button</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">4dp</item>
        <item name="android:textStyle">italic</item>

    </style>

</resources>
