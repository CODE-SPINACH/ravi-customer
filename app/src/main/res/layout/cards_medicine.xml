<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector">

        <com.app.tarun.dc2.CustomViews.SquareLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/serialNoTextView1"
                android:textSize="30sp"
                android:textColor="#fff"
                android:background="#fedcba32"
                android:gravity="center"
                />
        </com.app.tarun.dc2.CustomViews.SquareLayout>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/nameOfMedicineTextView"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:text="Crocin 250mg"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <com.app.tarun.dc2.CustomViews.SquareLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/medicineCategoryPic"
                    android:background="@drawable/ic_pill_dark"
                    />
            </com.app.tarun.dc2.CustomViews.SquareLayout>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/numberOfMedicineTextView"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:textSize="20sp"
                android:text="10"/>


        </LinearLayout>

        <ImageButton
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/medicineCardCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:background="#FFF"
            android:src="@drawable/ic_cancel_2"
            android:layout_gravity="center"

            />

    </LinearLayout>

</FrameLayout>

